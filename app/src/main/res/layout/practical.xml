<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0429F4"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/ic_bluetooth_black_24dp"
        app:layout_constraintCircle="@+id/fab_share"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="90"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="126dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@color/white"
        app:backgroundTint="@color/red"
        app:srcCompat="@drawable/ic_email_black_24dp"
        app:layout_constraintCircle="@+id/fab_share"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="180"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="248dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#958989"
        android:clickable="true"
        android:tint="@color/green"
        app:srcCompat="@drawable/ic_file_download_black_24dp"
        app:layout_constraintCircle="@+id/fab_share"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="270"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="144dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_send_black_24dp"
        app:layout_constraintCircle="@id/fab_share"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="360"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="263dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>